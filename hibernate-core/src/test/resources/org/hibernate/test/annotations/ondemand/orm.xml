<?xml version="1.0" encoding="UTF-8"?>

<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 version="2.0"
        >
    <entity name="CustomerDemand" class="org.hibernate.test.annotations.derivedidentities.e1.b.specjmapid.ondemand.CustomerDemand" >
        <named-query name="CustomerDemand.count">
            <query>select COUNT(a) from CustomerDemand a</query>
            <hint name="org.hibernate.cacheable" value="true" />
            <hint name="org.hibernate.fetchSize" value="1" />
            <hint name="org.hibernate.readOnly" value="false" />
            <hint name="org.hibernate.timeout" value="1200" />
            <hint name="org.hibernate.cacheMode" value="get" />
        </named-query>
        <named-query name="CustomerDemand.selectAll">
            <query>SELECT a FROM CustomerDemand a</query>
            <hint name="org.hibernate.cacheable" value="false" />
            <hint name="org.hibernate.fetchSize" value="1" />
            <hint name="org.hibernate.readOnly" value="true" />
            <hint name="org.hibernate.cacheMode" value="get" />
        </named-query>
        <named-query name="CustomerDemand.selectByCreditLimit">
            <query>SELECT c.id FROM CustomerDemand c WHERE c.creditLimit > :limit</query>
            <hint name="org.hibernate.cacheable" value="false" />
            <hint name="org.hibernate.cacheMode" value="NORMAL" />
        </named-query>
        

        <attributes>
            <id name="id"><column name="C_ID"/></id>
            <!--
            -->
            <one-to-many name="customerInventories" mapped-by="customerdemand" fetch="LAZY">
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-many>
        </attributes>

    </entity>
    
    
</entity-mappings>